---
import Link from '@/components/Link.astro'
import TuiCard from '@/components/port/TuiCard'
import { Icon } from 'astro-icon/components'

const { prevPost, nextPost } = Astro.props
---

<nav class="col-start-2 grid grid-cols-1 gap-4 sm:grid-cols-2">
  <div class={!nextPost ? 'opacity-50 pointer-events-none' : ''}>
    <TuiCard
      client:load
      className="hover:border-primary/50 h-full transition-colors"
    >
      <Link
        href={nextPost ? `/blog/${nextPost.id}` : '#'}
        class="group flex h-full items-center justify-start p-4"
        aria-disabled={!nextPost}
      >
        <Icon
          name="lucide:arrow-left"
          class="text-muted-foreground group-hover:text-foreground mr-3 size-5 transition-transform group-hover:-translate-x-1"
        />
        <div class="flex flex-col items-start overflow-hidden text-wrap">
          <span
            class="text-muted-foreground mb-1 font-mono text-xs tracking-wider uppercase"
            >Next Post</span
          >
          <span
            class="text-foreground w-full text-left text-sm leading-tight font-medium text-ellipsis"
          >
            {nextPost?.data.title || 'Latest post'}
          </span>
        </div>
      </Link>
    </TuiCard>
  </div>

  <div class={!prevPost ? 'opacity-50 pointer-events-none' : ''}>
    <TuiCard
      client:load
      className="hover:border-primary/50 h-full transition-colors"
    >
      <Link
        href={prevPost ? `/blog/${prevPost.id}` : '#'}
        class="group flex h-full items-center justify-end p-4"
        aria-disabled={!prevPost}
      >
        <div class="flex flex-col items-end overflow-hidden text-wrap">
          <span
            class="text-muted-foreground mb-1 font-mono text-xs tracking-wider uppercase"
            >Previous Post</span
          >
          <span
            class="text-foreground w-full text-right text-sm leading-tight font-medium text-ellipsis"
          >
            {prevPost?.data.title || 'Last post'}
          </span>
        </div>
        <Icon
          name="lucide:arrow-right"
          class="text-muted-foreground group-hover:text-foreground ml-3 size-5 transition-transform group-hover:translate-x-1"
        />
      </Link>
    </TuiCard>
  </div>
</nav>
